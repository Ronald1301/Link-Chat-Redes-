        )
        self.lbl_archivo.pack(side=tk.LEFT, padx=5, fill=tk.X, expand=True)
        
        # Bot√≥n para enviar archivo (sin emojis ni colores)
        self.btn_enviar_archivo = tk.Button(
            file_frame, 
            text="Enviar Archivo",
