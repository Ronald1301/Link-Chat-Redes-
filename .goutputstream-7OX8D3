            relief="solid",
            bd=1
        )
        self.btn_enviar_archivo.pack(side=tk.RIGHT, padx=2)
        
        # Controles simples
        control_frame = tk.Frame(main_frame, bg=self.bg_color, highlightbackground=self.border_color, highlightthickness=1)
